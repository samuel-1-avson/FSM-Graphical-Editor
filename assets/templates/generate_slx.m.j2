        for i = 1:min(length(ME.stack), 5)
            fprintf(2, '  %d. %s (line %d)\n', i, ME.stack(i).name, ME.stack(i).line);
        end
        if length(ME.stack) > 5, fprintf(2, '  ... (%d more frames)\n', length(ME.stack) - 5); end
